{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "airbnb/hooks",
    "plugin:react/recommended",
    "react-app",
    "react-app/jest",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "eslint:recommended",
    "plugin:json/recommended",
    "plugin:react-hooks/recommended"
  ],
  "overrides": [
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest", 
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true 
    },
    "parser": "@typescript-eslint/parser",
    "project": ["./tsconfig.json"],
    "tsconfigRootDir": "./"
  },
  "plugins": [
    "react",
    "@typescript-eslint"
  ],
  "rules": {
    "react/jsx-filename-extension" : [1, { "extensions": [".js", ".jsx", ".ts", ".tsx"] }]
    
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
