{
  "compilerOptions": {    
    "target": "esnext" ,
    "module": "commonjs",   
    "jsx": "react",   
    "sourceMap": true,    
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true ,
    "noImplicitReturns": true ,
    "noFallthroughCasesInSwitch": true,   
    "typeRoots": ["node_modules/@types"] ,
    "types": ["node", "jest"] ,
    "allowSyntheticDefaultImports": true ,
    "esModuleInterop": true ,
    "resolveJsonModule": true ,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
  },
  "include": ["src/**/*", "webpack.common.js"],
  "exclude": ["node_modules/**/*", "webpack.common.js"]
}
